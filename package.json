{
  "name": "react-app",
  "version": "1.0.0",
  "description": "A application that displays list of movies",
  "scripts": {
    "build": "npm run webpack:prod",
    "build:watch": "npm run webpack:watch",
    "lint": "eslint .; exit 0",
    "lint:fix": "eslint . --fix",
    "serve": "webpack-dev-server -d --open",
    "serve:prod": "webpack -p",
    "start": "npm run serve",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage && node ./src/lib/build_coverage/CoverageReportCss.js",
    "webpack:dev": "webpack -d",
    "webpack:prod": "webpack -p",
    "webpack:watch": "webpack --watch"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>src/__setup/jestconfig.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy"
    },
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "collectCoverageFrom": [
      "**/src/**.{js,jsx}",
      "!**/src/registerServiceWorker.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/vendor/",
      "/src/__setup/",
      "/src/__tests__/",
      "/coverage/"
    ],
    "coverageReporters": [
      "cobertura",
      "html"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "suiteName": "jest tests",
          "output": "junit/test-results.xml",
          "classNameTemplate": "{classname}-{title}",
          "titleTemplate": "{classname}-{title}",
          "ancestorSeparator": " â€º ",
          "usePathForSuiteName": "true"
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "bundle-loader": "^0.5.6",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-react": "^7.8.2",
    "fs-jetpack": "^1.3.0",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "inline-css": "^2.4.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "jest-junit": "^5.0.0",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^0.4.0",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^4.0.2",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-hot-loader": "^4.2.0",
    "react-lazy-import": "^0.2.1",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.4.0",
    "si-react-localize": "^1.1.9",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.10.2",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.1",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "npm": "^6.1.0"
  }
}
